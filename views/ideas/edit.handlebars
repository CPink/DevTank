{{#each errors}}
    <div class="alert alert-danger">{{ text }}</div>
{{/each}}

<div class="card card-body">
    <h3 class="text-center">Edit App Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
        </div>
         <div class="form-group">
            <label for="details">Details</label>
            <textarea type="text" class="form-control" name="details" required>{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark btn-warning btn-block">Submit Edited Idea</button>
    </form>
</div>
